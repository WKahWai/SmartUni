@model IEnumerable<SmartUni.Models.StudyLevel>
@using SmartUni.Resources
@inject Localizations SharedLocalizer

@{
    ViewData["Title"] = @SharedLocalizer.GetLocalizedHtmlString("Study Level");
}

    <h2>@SharedLocalizer.GetLocalizedHtmlString("Study Level")</h2>

<p>
    <button class="btn btn-info" onclick="location.href='@Url.Action("Create", "StudyLevels")'">
        <i class="ace-icon fa glyphicon-plus bigger-110"></i>
        @SharedLocalizer.GetLocalizedHtmlString("Create New")
    </button>
</p>
<table id="simple-table" class="table  table-bordered table-hover col-md-6">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StudyLevelId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudyLevelDesc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{ if (Model.Count() == 0)
            {
                <tr>
                            <td colspan="3" class="text-align-center">@SharedLocalizer.GetLocalizedHtmlString("- No data available -")</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.StudyLevelId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StudyLevelDesc)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.StudyLevelId">@SharedLocalizer.GetLocalizedHtmlString("Edit")</a> |
                            <a asp-action="Details" asp-route-id="@item.StudyLevelId">@SharedLocalizer.GetLocalizedHtmlString("Details")</a> |
                            <a asp-action="Delete" asp-route-id="@item.StudyLevelId">@SharedLocalizer.GetLocalizedHtmlString("Delete")</a>
                        </td>
                    </tr>
                }
            }
        }
    </tbody>
</table>
