@model IEnumerable<SmartUni.Models.Student>

@{
    ViewData["Title"] = "Students";
}

<h2>Students</h2>

<p>
    <button class="btn btn-info" onclick="location.href='@Url.Action("Create", "Students")'">
        <i class="ace-icon fa glyphicon-plus bigger-110"></i>
        Create New
    </button>
</p>
<div class="form-group col-md-4">
    <label class="control-label">Class ID</label>
    <select id="classId" class="form-control" asp-items="ViewBag.ClassList"><option value="">Pick one</option></select>
</div>
<table id="simple-table" class="table  table-bordered table-hover col-md-6">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StudName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudyStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{ if (Model.Count() == 0)
    {
                <tr>
                    <td colspan="6" class="text-align-center">- No data available -</td>
                </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.StudName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Class.ClassDesc)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StudyStatus.StudyStatusDesc)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.StudId">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.StudId">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.StudId">Delete</a>
                            </td>
                        </tr>
                }
            }
        }
    }
                </tbody>
</table>


@section Scripts {
    <script>
        $("#classId").on("change", function () {
             window.location.href = '@Url.Action("Index", "Students")' + '?filter=' + $(this).val();
        });
    </script>
}
