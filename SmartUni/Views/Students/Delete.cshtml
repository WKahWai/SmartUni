@model SmartUni.Models.Student
@using SmartUni.Resources
@inject Localizations SharedLocalizer

@{
    ViewData["Title"] = @SharedLocalizer.GetLocalizedHtmlString("Delete");
}

    <h2>@SharedLocalizer.GetLocalizedHtmlString("Delete")</h2>

    <h3>@SharedLocalizer.GetLocalizedHtmlString("Are you sure you want to delete this ?")</h3>
<div>
    <h4>@SharedLocalizer.GetLocalizedHtmlString("Student")</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.StudName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StudName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.PhoneNo)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PhoneNo)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Class)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Class.ClassDesc)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.StudyStatus)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StudyStatus.StudyStatusDesc)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="StudId" />
        @if (Model.StudentSubject.Count >= 1)
        {
            <div class="alert alert-danger">
                <button type="button" class="close" data-dismiss="alert">
                    <i class="ace-icon fa fa-times"></i>
                </button>

                <strong>
                    <i class="ace-icon fa fa-times"></i>
                    Oh no!
                </strong>

                @if (Model.StudentSubject.Count == 1)
                {
                    <span>This student's holding 1 subject.</span>
                }
                else
                {
                    <span>This student's holding @Model.StudentSubject.Count subjects.</span>
                }
                <br>
            </div>
        }
        else
        {
            <input type="submit" value="@SharedLocalizer.GetLocalizedHtmlString("Delete")" class="btn btn-default" />
        }
        <a asp-action="Index">@SharedLocalizer.GetLocalizedHtmlString("Back to List")</a>
    </form>
</div>
