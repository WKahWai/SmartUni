@using SmartUni.Resources
@inject Localizations SharedLocalizer

@{
    ViewData["Title"] = @SharedLocalizer.GetLocalizedHtmlString("Settings");
}

    <h2>@SharedLocalizer.GetLocalizedHtmlString("Settings")</h2>

<table id="simple-table" class="table  table-bordered table-hover col-md-6">
    <thead>
        <tr>
            <th>
                @SharedLocalizer.GetLocalizedHtmlString("Item")
            </th>
            <th>
                @SharedLocalizer.GetLocalizedHtmlString("Link")
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @SharedLocalizer.GetLocalizedHtmlString("Tutor Status")
            </td>
            <td>
                <a asp-controller="TutorStatus" asp-action="Index">@SharedLocalizer.GetLocalizedHtmlString("Go")</a>
            </td>
        </tr>

        <tr>
            <td>
                @SharedLocalizer.GetLocalizedHtmlString("Tutor Type")
            </td>
            <td>
                <a asp-controller="TutorTypes" asp-action="Index">@SharedLocalizer.GetLocalizedHtmlString("Go")</a>
            </td>
        </tr>
    </tbody>
</table>
