@model SmartUni.Models.Tutor
@using SmartUni.Resources
@inject Localizations SharedLocalizer
@{
    ViewData["Title"] = @SharedLocalizer.GetLocalizedHtmlString("Create");
}

    <h2>@SharedLocalizer.GetLocalizedHtmlString("Create")</h2>

    <h4>@SharedLocalizer.GetLocalizedHtmlString("Tutor")</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TutorName" class="control-label"></label>
                <input asp-for="TutorName" class="form-control" />
                <span asp-validation-for="TutorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNo" class="control-label"></label>
                <input asp-for="PhoneNo" class="form-control" type="text" />
                <span asp-validation-for="PhoneNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TutorStatusId" class="control-label"></label>
                <select asp-for="TutorStatusId" class="form-control ui-autocomplete-input" asp-items="ViewBag.TutorStatusId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TutorTypeId" class="control-label"></label>
                <select asp-for="TutorTypeId" class="form-control" asp-items="ViewBag.TutorTypeId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="@SharedLocalizer.GetLocalizedHtmlString("Create")" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@SharedLocalizer.GetLocalizedHtmlString("Back to List")</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
