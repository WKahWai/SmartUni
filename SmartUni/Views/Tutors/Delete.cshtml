@model SmartUni.Models.Tutor
@using SmartUni.Resources
@inject Localizations SharedLocalizer

@{
    ViewData["Title"] = @SharedLocalizer.GetLocalizedHtmlString("Delete");
}

    <h2>@SharedLocalizer.GetLocalizedHtmlString("Delete")</h2>

    <h3>@SharedLocalizer.GetLocalizedHtmlString("Are you sure you want to delete this ?")</h3>
<div>
    <h4>@SharedLocalizer.GetLocalizedHtmlString("Tutor")</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TutorName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TutorName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.PhoneNo)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PhoneNo)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TutorStatusId)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TutorStatus.TutorStatusDesc)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TutorTypeId)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TutorType.TutorTypeDesc)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="TutorId" />
        @if (Model.Subject.Count >= 1 || Model.Class.Count >= 1)
        {
            <div class="alert alert-danger">
                <button type="button" class="close" data-dismiss="alert">
                    <i class="ace-icon fa fa-times"></i>
                </button>

                <strong>
                    <i class="ace-icon fa fa-times"></i>
                    Oh no!
                </strong>

                <span>There're @Model.Subject.Count subject(s) and @Model.Class.Count class(es) with this tutor.</span>
                <br>
            </div>
        }
        else
        {
            <input type="submit" value="@SharedLocalizer.GetLocalizedHtmlString("Delete")" class="btn btn-default" />
        }
        <a asp-action="Index">@SharedLocalizer.GetLocalizedHtmlString("Back to List")</a>
    </form>
</div>
