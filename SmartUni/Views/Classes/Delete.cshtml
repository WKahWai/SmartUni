@model SmartUni.Models.Class
@using SmartUni.Resources
@inject Localizations SharedLocalizer

@{
    ViewData["Title"] = @SharedLocalizer.GetLocalizedHtmlString("Delete");
}

<h2>@SharedLocalizer.GetLocalizedHtmlString("Delete")</h2>

<h3>@SharedLocalizer.GetLocalizedHtmlString("Are you sure you want to delete this ?")</h3>
<div>
    <h4>@SharedLocalizer.GetLocalizedHtmlString("Class")</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ClassDesc)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ClassDesc)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Year)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.StudyLevel)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StudyLevel.StudyLevelDesc)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Tutor)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Tutor.TutorId)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ClassId" />
        @if (Model.Student.Count >= 1)
        {
            <div class="alert alert-danger">
                <button type="button" class="close" data-dismiss="alert">
                    <i class="ace-icon fa fa-times"></i>
                </button>

                <strong>
                    <i class="ace-icon fa fa-times"></i>
                    Oh no!
                </strong>

                @if (Model.Student.Count == 1)
                {
                    <span>There's 1 student in this class.</span>
                }
                else
                {
                    <span>There're @Model.Student.Count students in this class.</span>
                }
                <br>
            </div>
        }
        else
        {
            <input type="submit" value="@SharedLocalizer.GetLocalizedHtmlString("Delete")" class="btn btn-default" />
        }
        <a asp-action="Index">@SharedLocalizer.GetLocalizedHtmlString("Back to List")</a>
    </form>
</div>
