@model SmartUni.Models.Class
@using SmartUni.Resources
@inject Localizations SharedLocalizer

@{
    ViewData["Title"] = @SharedLocalizer.GetLocalizedHtmlString("Create");
}

    <h2>@SharedLocalizer.GetLocalizedHtmlString("Create")</h2>

    <h4>@SharedLocalizer.GetLocalizedHtmlString("Class")</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClassDesc" class="control-label"></label>
                <input asp-for="ClassDesc" class="form-control" />
                <span asp-validation-for="ClassDesc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudyLevelId" class="control-label"></label>
                <select asp-for="StudyLevelId" class="form-control" asp-items="ViewBag.StudyLevelId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TutorId" class="control-label"></label>
                <select asp-for="TutorId" class="form-control" asp-items="ViewBag.TutorId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@SharedLocalizer.GetLocalizedHtmlString("Create")" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@SharedLocalizer.GetLocalizedHtmlString("Back to List")</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
