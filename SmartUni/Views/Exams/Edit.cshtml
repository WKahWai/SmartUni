@model SmartUni.Models.Exam
@using SmartUni.Resources
@inject Localizations SharedLocalizer

@{
    ViewData["Title"] = @SharedLocalizer.GetLocalizedHtmlString("Edit");
}

    <h2>@SharedLocalizer.GetLocalizedHtmlString("Edit")</h2>

    <h4>@SharedLocalizer.GetLocalizedHtmlString("Exam")</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ExamId" />
            <div class="form-group">
                <label asp-for="ExamDesc" class="control-label"></label>
                <input asp-for="ExamDesc" class="form-control" />
                <span asp-validation-for="ExamDesc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExamYear" class="control-label"></label>
                <input asp-for="ExamYear" class="form-control" />
                <span asp-validation-for="ExamYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExamTerm" class="control-label"></label>
                <input asp-for="ExamTerm" class="form-control" />
                <span asp-validation-for="ExamTerm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@SharedLocalizer.GetLocalizedHtmlString("Save")" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@SharedLocalizer.GetLocalizedHtmlString("Back to List")</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
