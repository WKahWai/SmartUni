@model IEnumerable<SmartUni.Models.Exam>

@{
    ViewData["Title"] = "Exams";
}

<h2>Exams</h2>

<p>
    <button class="btn btn-info" onclick="location.href='@Url.Action("Create", "Exams")'">
        <i class="ace-icon fa glyphicon-plus bigger-110"></i>
        Create New
    </button>
</p>
<table id="simple-table" class="table  table-bordered table-hover col-md-6">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ExamDesc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExamYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExamTerm)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{ if (Model.Count() == 0)
    {
                <tr>
                    <td colspan="4" class="text-align-center">- No data available -</td>
                </tr>
    }
    else
    {
        foreach (var item in Model)
        {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ExamDesc)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ExamYear)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ExamTerm)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ExamId">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.ExamId">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.ExamId">Delete</a>
                        </td>
                    </tr>
            }
        }
    }
            </tbody>
</table>
