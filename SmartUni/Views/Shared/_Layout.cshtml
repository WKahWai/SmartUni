@using SmartUni.Resources
@inject Localizations SharedLocalizer

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta http-equiv="Content-Security-Policy" content="upgrade-insecure-requests">
    <title>@ViewData["Title"] - SmartUni</title>

    <environment>
        <!-- bootstrap & fontawesome -->
        <link rel="stylesheet" href="~/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/font-awesome/4.5.0/css/font-awesome.min.css" />

        <!-- page specific plugin styles -->
        <!-- text fonts -->
        <link rel="stylesheet" href="~/css/fonts.googleapis.com.css" />

        <!-- ace styles -->
        <link rel="stylesheet" href="~/css/ace.min.css" class="ace-main-stylesheet" id="main-ace-style" />
        <link rel="stylesheet" href="~/css/ace-skins.min.css" />
        <link rel="stylesheet" href="~/css/ace-rtl.min.css" />

        <link rel="stylesheet" href="~/css/kahwai.css" />
        <!-- inline styles related to this page -->
        <!-- ace settings handler -->
        <script src="~/js/ace-extra.min.js"></script>
    </environment>
</head>

<!-- <a asp-area="" asp-controller="Home" asp-action="Index">Home</a> -->
<body class="no-skin">
    <div id="navbar" class="navbar navbar-default          ace-save-state">
        <div class="navbar-container ace-save-state" id="navbar-container">
            <button type="button" class="navbar-toggle menu-toggler pull-left" id="menu-toggler" data-target="#sidebar">
                <span class="sr-only">Toggle sidebar</span>

                <span class="icon-bar"></span>

                <span class="icon-bar"></span>

                <span class="icon-bar"></span>
            </button>

            <div class="navbar-header pull-left">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <small>
                        <i class="fa fa-leaf"></i>
                        SmartUni 智联
                    </small>
                </a>
            </div>

            <div class="navbar-buttons navbar-header pull-right" role="navigation">
                <ul class="nav ace-nav">
                    <li class="grey"><a asp-action="SetLanguage" asp-controller="Home" asp-route-culture="en-US" asp-route-returnUrl="@Url.RouteUrl(this.ViewContext.RouteData.Values)">English</a></li>
                    <li class="grey"><a asp-action="SetLanguage" asp-controller="Home" asp-route-culture="zh-CN" asp-route-returnUrl="@Url.RouteUrl(this.ViewContext.RouteData.Values)">简中</a></li>
                </ul>
            </div>
        </div><!-- /.navbar-container -->
    </div>

    <partial name="_CookieConsentPartial" />

    <div class="main-container ace-save-state" id="main-container">
        <script type="text/javascript">
            try { ace.settings.loadState('main-container') } catch (e) { }
        </script>

        <div id="sidebar" class="sidebar responsive ace-save-state">
            <script type="text/javascript">
                try { ace.settings.loadState('sidebar') } catch (e) { }
            </script>

            <ul class="nav nav-list">
                <li name="navTab" class="">
                    <a asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="menu-icon fa fa-tachometer"></i>
                        <span class="menu-text"> @SharedLocalizer.GetLocalizedHtmlString("Dashboard") </span>
                    </a>

                    <b class="arrow"></b>
                </li>

                <!-- First List Item : Tutor -->
                <li name="navTab" class="">
                    <a href="#" class="dropdown-toggle">
                        <i class="menu-icon fa fa-desktop"></i>
                        <span class="menu-text">
                            @SharedLocalizer.GetLocalizedHtmlString("Tutor")
                        </span>

                        <b class="arrow fa fa-angle-down"></b>
                    </a>

                    <b class="arrow"></b>

                    <ul name="navList" class="submenu">
                        <li class="">
                            <a asp-area="" asp-controller="Tutors" asp-action="Create">
                                <i class="menu-icon fa fa-caret-right"></i>
                                @SharedLocalizer.GetLocalizedHtmlString("Add new tutor")
                            </a>

                            <b class="arrow"></b>
                        </li>

                        <li class="">
                            <a asp-area="" asp-controller="Tutors" asp-action="Index">
                                <i class="menu-icon fa fa-caret-right"></i>
                                @SharedLocalizer.GetLocalizedHtmlString("Manage tutors")
                            </a>

                            <b class="arrow"></b>
                        </li>

                        <li class="">
                            <a asp-area="" asp-controller="Tutors" asp-action="Settings">
                                <i class="menu-icon fa fa-caret-right"></i>
                                @SharedLocalizer.GetLocalizedHtmlString("Manage settings")
                            </a>

                            <b class="arrow"></b>
                        </li>
                    </ul>
                </li>

                <!-- Second List Item : Class -->
                <li name="navTab" class="">
                    <a href="#" class="dropdown-toggle">
                        <i class="menu-icon fa fa-desktop"></i>
                        <span class="menu-text">
                            @SharedLocalizer.GetLocalizedHtmlString("Class")
                        </span>

                        <b class="arrow fa fa-angle-down"></b>
                    </a>

                    <b class="arrow"></b>

                    <ul name="navList" class="submenu">
                        <li class="">
                            <a asp-area="" asp-controller="Classes" asp-action="Create">
                                <i class="menu-icon fa fa-caret-right"></i>
                                @SharedLocalizer.GetLocalizedHtmlString("Add new class")
                            </a>

                            <b class="arrow"></b>
                        </li>

                        <li class="">
                            <a asp-area="" asp-controller="Classes" asp-action="Index">
                                <i class="menu-icon fa fa-caret-right"></i>
                                @SharedLocalizer.GetLocalizedHtmlString("Manage classes")
                            </a>

                            <b class="arrow"></b>
                        </li>

                        <li class="">
                            <a asp-area="" asp-controller="Classes" asp-action="Settings">
                                <i class="menu-icon fa fa-caret-right"></i>
                                @SharedLocalizer.GetLocalizedHtmlString("Manage settings")
                            </a>

                            <b class="arrow"></b>
                        </li>
                    </ul>
                </li>

                <!-- Third List Item : Subject -->
                <li name="navTab" class="">
                    <a href="#" class="dropdown-toggle">
                        <i class="menu-icon fa fa-desktop"></i>
                        <span class="menu-text">
                            @SharedLocalizer.GetLocalizedHtmlString("Subject")
                        </span>

                        <b class="arrow fa fa-angle-down"></b>
                    </a>

                    <b class="arrow"></b>

                    <ul name="navList" class="submenu">
                        <li class="">
                            <a asp-area="" asp-controller="Subjects" asp-action="Create">
                                <i class="menu-icon fa fa-caret-right"></i>
                                @SharedLocalizer.GetLocalizedHtmlString("Add new subject")
                            </a>

                            <b class="arrow"></b>
                        </li>

                        <li class="">
                            <a asp-area="" asp-controller="Subjects" asp-action="Index">
                                <i class="menu-icon fa fa-caret-right"></i>
                                @SharedLocalizer.GetLocalizedHtmlString("Manage subjects")
                            </a>

                            <b class="arrow"></b>
                        </li>
                    </ul>
                </li>

                <!-- Forth List Item : Student -->
                <li name="navTab" class="">
                    <a href="#" class="dropdown-toggle">
                        <i class="menu-icon fa fa-desktop"></i>
                        <span class="menu-text">
                            @SharedLocalizer.GetLocalizedHtmlString("Student")
                        </span>

                        <b class="arrow fa fa-angle-down"></b>
                    </a>

                    <b class="arrow"></b>

                    <ul name="navList" class="submenu">
                        <li class="">
                            <a asp-area="" asp-controller="Students" asp-action="Create">
                                <i class="menu-icon fa fa-caret-right"></i>
                                @SharedLocalizer.GetLocalizedHtmlString("Add new student")
                            </a>

                            <b class="arrow"></b>
                        </li>

                        <li class="">
                            <a asp-area="" asp-controller="Students" asp-action="Index">
                                <i class="menu-icon fa fa-caret-right"></i>
                                @SharedLocalizer.GetLocalizedHtmlString("Manage students")
                            </a>

                            <b class="arrow"></b>
                        </li>

                        <li class="">
                            <a asp-area="" asp-controller="Students" asp-action="Settings">
                                <i class="menu-icon fa fa-caret-right"></i>
                                @SharedLocalizer.GetLocalizedHtmlString("Manage settings")
                            </a>

                            <b class="arrow"></b>
                        </li>
                    </ul>
                </li>

                <!-- Fifth List Item : Examination -->
                <li name="navTab" class="">
                    <a href="#" class="dropdown-toggle">
                        <i class="menu-icon fa fa-desktop"></i>
                        <span class="menu-text">
                            @SharedLocalizer.GetLocalizedHtmlString("Examination")
                        </span>

                        <b class="arrow fa fa-angle-down"></b>
                    </a>

                    <b class="arrow"></b>

                    <ul name="navList" class="submenu">
                        <li class="">
                            <a asp-area="" asp-controller="Exams" asp-action="Create">
                                <i class="menu-icon fa fa-caret-right"></i>
                                @SharedLocalizer.GetLocalizedHtmlString("Add new exam")
                            </a>

                            <b class="arrow"></b>
                        </li>

                        <li class="">
                            <a asp-area="" asp-controller="Exams" asp-action="Index">
                                <i class="menu-icon fa fa-caret-right"></i>
                                @SharedLocalizer.GetLocalizedHtmlString("Manage exams")
                            </a>

                            <b class="arrow"></b>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>

        <div class="main-content">
            <div class="page-content">
                <div class="row">
                    <div class="col-xs-12">
                        <!-- PAGE CONTENT BEGINS -->
                        @RenderBody()
                        <!-- PAGE CONTENT ENDS -->
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div>
        </div><!-- /.main-content -->
    </div>

    <div class="footer">
        <div class="footer-inner">
            <div class="footer-content">
                <span class="bigger-120">
                    <span class="blue bolder">SmartUni</span>
                    Application &copy; 2019
                </span>

                &nbsp; &nbsp;
                <span class="action-buttons">
                    <a href="#">
                        <i class="ace-icon fa fa-twitter-square light-blue bigger-150"></i>
                    </a>

                    <a href="#">
                        <i class="ace-icon fa fa-facebook-square text-primary bigger-150"></i>
                    </a>

                    <a href="#">
                        <i class="ace-icon fa fa-rss-square orange bigger-150"></i>
                    </a>
                </span>
            </div>
        </div>
    </div>
    <environment>
        <!-- basic scripts -->
        <!--[if !IE]> -->
        <script src="~/js/jquery-2.1.4.min.js"></script>

        <!-- <![endif]-->
        <!--[if IE]>
        <script src="assets/js/jquery-1.11.3.min.js"></script>
        <![endif]-->
        <script type="text/javascript">
            if ('ontouchstart' in document.documentElement) document.write("<script src='assets/js/jquery.mobile.custom.min.js'>" + "<" + "/script>");
        </script>
        <script src="~/js/bootstrap.min.js"></script>

        <!-- page specific plugin scripts -->
        <!-- ace scripts -->
        <script src="~/js/ace-elements.min.js"></script>
        <script src="~/js/ace.min.js"></script>

        <!-- inline scripts related to this page -->
    </environment>
    @RenderSection("Scripts", required: false)
</body>
</html>
